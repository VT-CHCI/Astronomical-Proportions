<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>Astronomical Proportions</title>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
	<%= stylesheet_link_tag "application", :media => "all" %>
  <%= requirejs_include_tag "main" %>
  <%= csrf_meta_tags %>
  <%= include_gon %>
	<meta name="description" content="">
	<meta name="author" content="">

	<meta name="viewport" content="width=device-width">

	<style>
		body {
		  padding-top: 60px;
		  padding-bottom: 40px;
		}

		.affix {
          position: fixed;
          top: 20px;
          left: auto;
          right: auto;
        }
	</style>
</head>
<body>
	<div id="main">
		<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <a class="brand" id="home" href="/">Astronomical Proportions</a>
	        <div id="user_nav">
					<% if person_signed_in? %>
						Signed in as <span id="current_person"><%= current_person.firstName %></span><span id="current_person_id" class="hidden"><%= current_person.id %></span>. Not you?
						<%= link_to "Sign out", destroy_person_session_path %>
					<% else %>
						<%= link_to "Sign up", new_person_registration_path %> or <%= link_to "Sign in", new_person_session_path %>
						<% if cookies["last_person_id"] %>
							<span id="last_person_id" class="hidden"><%= cookies["last_person_id"] %></span>
						<% end %>
					<% end %>
				</div>
	      </div> <!-- /.container -->
	      
	    </div> <!-- /.navbar-inner -->
	  </div> <!-- /.navbar-fixed-top -->

		<!-- Example row of columns -->

		<div id="messages">
      <% if flash[:notice] %>
        <div class="alert alert-block">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= notice %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= alert %>
        </div>
      <% end %>
    </div>

	    <div class="row-fluid">
		  <!-- left sidebar -->
  	     	<div id="leftColumn" class="span2"></div>
          <div id="centerColumn" class="span8"> <%= yield %> </div>
          <div id="rightColumn" class="span2"></div>
	    </div>
		
	</div>

<div id="footer"></div>

</body>
</html>
